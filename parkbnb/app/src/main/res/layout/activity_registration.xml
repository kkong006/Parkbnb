<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@mipmap/backgroundlogin"
tools:context="edu.ucr.cutiehack.parkbnb.Registration">

<RelativeLayout
    android:layout_width="368dp"
    android:layout_height="495dp"
    android:layout_marginBottom="101dp"
    android:orientation="vertical"
    android:paddingTop="100dp"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:layout_editor_absoluteX="8dp">

    <ImageView
        android:layout_width="@dimen/img_width_height"
        android:layout_height="@dimen/img_width_height"
        android:layout_above="@+id/editEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/login_car" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editPassword"
        android:layout_alignLeft="@+id/editPassword"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:hint="Email"
        android:paddingTop="30dp" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registerButton"
        android:layout_alignLeft="@+id/registerButton"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:hint="Password"
        android:paddingTop="30dp" />


    <Button
        android:id="@+id/registerButton"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginRedirect"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="17dp"
        android:background="@color/colorMyBlue"
        android:text="Register"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/loginRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:paddingTop="30dp"
        android:text="Already Registered? Click here to Login" />

</RelativeLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@mipmap/backgroundlogin"
tools:context="edu.ucr.cutiehack.parkbnb.RentorLogin">

<RelativeLayout
    android:layout_width="368dp"
    android:layout_height="495dp"
    android:layout_marginBottom="88dp"
    android:orientation="vertical"
    android:paddingTop="100dp"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:layout_editor_absoluteX="8dp">

    <ImageView
        android:layout_width="@dimen/img_width_height"
        android:layout_height="@dimen/img_width_height"

        android:layout_above="@+id/rentorWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/login_car" />

    <TextView
        android:id="@+id/rentorWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rentorEditEmail"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="11dp"
        android:text="Rentor login" />

    <EditText
        android:id="@+id/rentorEditEmail"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rentorEditPassword"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:hint="Email"
        android:paddingTop="30dp" />


    <EditText
        android:id="@+id/rentorEditPassword"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rentorLoginButton"
        android:layout_alignLeft="@+id/rentorEditEmail"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:hint="Password"
        android:paddingTop="30dp" />

    <Button
        android:id="@+id/rentorLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rentorRegisterRedirect"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:background="@color/colorMyBlue"
        android:text="Login"
        android:textColor="@android:color/white" />
    <!--textColor-->

    <TextView
        android:id="@+id/rentorRegisterRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:paddingTop="30dp"
        android:text="Don't have an Account? Click here to Register" />

</RelativeLayout>

</android.support.constraint.ConstraintLayout>